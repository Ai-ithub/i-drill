{
  "name": "i-drill-dashboard",
  "version": "1.0.0",
  "description": "i-Drill Real-time Drilling Data Dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "build:analyze": "ANALYZE=true tsc && vite build --mode production",
    "build:stats": "tsc && vite build --mode production && npx vite-bundle-visualizer",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.7",
    "axios": "^1.6.2",
    "clsx": "^2.1.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.294.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.16.5",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.0",
    "vite": "^7.2.2",
    "vitest": "^2.1.8"
  }
}
