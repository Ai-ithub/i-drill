# ===== REMOTE CONNECTION CONFIGURATION =====
# This file shows how to configure the application to connect to remote services
# Copy this to .env in src/backend/ and update with your remote service details
# NEVER commit .env files to version control!

# ===== Environment =====
APP_ENV=production

# ===== Remote Database Configuration =====
# Format: postgresql://username:password@host:port/database
# Example for remote PostgreSQL server:
DATABASE_URL=postgresql://your_username:your_password@remote-db.example.com:5432/drilling_db

# Alternative: Use individual components (for config_loader)
# DB_HOST=remote-db.example.com
# DB_PORT=5432
# DB_NAME=drilling_db
# DB_USER=your_username
# DB_PASSWORD=your_password

# ===== Remote Kafka Configuration =====
# For remote Kafka cluster (e.g., Confluent Cloud, AWS MSK, or self-hosted)
KAFKA_BOOTSTRAP_SERVERS=remote-kafka.example.com:9092,remote-kafka2.example.com:9092
KAFKA_SENSOR_TOPIC=rig.sensor.stream
KAFKA_GROUP_ID=api-consumer-group

# Kafka Authentication (if enabled on remote server)
# For SASL/PLAIN authentication:
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=your_kafka_username
# KAFKA_SASL_PASSWORD=your_kafka_password

# For SSL/TLS (if enabled):
# KAFKA_SSL_CA_LOCATION=/path/to/ca-cert
# KAFKA_SSL_CERT_LOCATION=/path/to/client-cert
# KAFKA_SSL_KEY_LOCATION=/path/to/client-key

# ===== Remote Redis Configuration =====
REDIS_HOST=remote-redis.example.com
REDIS_PORT=6379
REDIS_DB=0
# Redis password (if enabled)
REDIS_PASSWORD=your_redis_password

# Alternative Redis URL format:
# REDIS_URL=redis://:password@remote-redis.example.com:6379/0

# ===== Remote MLflow Configuration =====
MLFLOW_TRACKING_URI=http://remote-mlflow.example.com:5000
# Or for HTTPS:
# MLFLOW_TRACKING_URI=https://remote-mlflow.example.com:5000
MLFLOW_EXPERIMENT_NAME=i-drill-models

# MLflow authentication (if enabled):
# MLFLOW_TRACKING_USERNAME=your_mlflow_username
# MLFLOW_TRACKING_PASSWORD=your_mlflow_password

# ===== API Configuration =====
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=false
API_DEBUG=false

# ===== Authentication =====
# CRITICAL: Generate a secure SECRET_KEY for production!
# Run: python scripts/generate_secret_key.py
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== Default Admin Account =====
# WARNING: Change these in production!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DEFAULT_ADMIN_EMAIL=admin@example.com

# ===== CORS Configuration =====
# In production, specify exact allowed origins (NO wildcards!)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Trusted hosts for proxy headers
TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com

# ===== Logging =====
LOG_LEVEL=INFO

# ===== ML Models =====
MODEL_PATH=../../models
ONNX_MODEL_PATH=../../models/onnx

# ===== Data Retention =====
DATA_RETENTION_DAYS=365
MAX_UPLOAD_SIZE_MB=100

# ===== Rate Limiting =====
ENABLE_RATE_LIMIT=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_PREDICTIONS=20/minute
RATE_LIMIT_SENSOR_DATA=200/minute

# Use remote Redis for rate limiting
RATE_LIMIT_STORAGE_URL=redis://:your_redis_password@remote-redis.example.com:6379/0

# ===== Control System Integration =====
CONTROL_SYSTEM_TYPE=REST
CONTROL_SYSTEM_URL=https://remote-control-system.example.com/api/v1
CONTROL_SYSTEM_TOKEN=your-control-system-api-token
CONTROL_SYSTEM_TIMEOUT=10
CONTROL_SYSTEM_ENABLED=true

# ===== Email Service Configuration =====
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=i-Drill System
SMTP_USE_TLS=true
FRONTEND_URL=https://app.yourdomain.com
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=60

