# ===== IMPORTANT SECURITY NOTE =====
# This is a template file. Copy this to .env and set secure values.
# NEVER commit .env files to version control!
# 
# Usage:
#   cp docker-compose.env.example .env
#   # Edit .env with secure passwords
#   docker-compose up

# ===== Database Configuration =====
# Use strong passwords (minimum 16 characters recommended)
POSTGRES_DB=drilling_db
POSTGRES_USER=drill_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD_MIN_16_CHARS

# ===== Application Security =====
# CRITICAL: Generate a secure SECRET_KEY for production!
# Run: python scripts/generate_secret_key.py
# Minimum 32 characters recommended
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_MIN_32_CHARS

# ===== Token Configuration =====
# Access token expiration time in minutes (default: 30 minutes for security)
# Reduced from 24 hours (1440 minutes) for better security
# Use refresh token for longer sessions
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== Default Admin Account =====
# WARNING: Change these in production!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_IN_PRODUCTION_MIN_12_CHARS
DEFAULT_ADMIN_EMAIL=admin@example.com

# ===== Redis Configuration =====
# Optional: Redis password (recommended for production)
REDIS_PASSWORD=

# ===== Grafana Configuration (for monitoring) =====
# WARNING: Change these in production!
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# ===== CORS Configuration =====
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5175

